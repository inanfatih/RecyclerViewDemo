<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:id="@+id/root_list_item"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/imv_list_item_circle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/RED"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"

    <ImageView
        android:id="@+id/imv_date_and_time"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_event_black_24dp"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="0dp"

        />

    <TextView
        android:id="@+id/lbl_message"
        style="@style/Text.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="17dp"
        tools:text="Check out content like Fragmented content Podcast and ideas and opinion of experts. Salla gitsin"

        />

    <TextView
        android:id="@+id/lbl_date_time"
        style="@style/Text.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="33dp"
        tools:text="2:43AM 09/7/2018"


        />

</android.support.constraint.ConstraintLayout>